{
  "name": "my-personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bunx --bun next dev",
    "build": "bunx --bun next build",
    "start": "bunx --bun next start",
    "lint": "bunx --bun next lint",
    "lint:fix": "bunx --bun eslint . --fix",
    "format": "bunx --bun prettier --write .",
    "test": "bunx --bun jest --watch",
    "test:ci": "bunx --bun jest",
    "type-check": "bunx --bun tsc --noEmit",
    "clean": "rimraf .next out dist",
    "prebuild": "bun run clean && bun run type-check",
    "build:optimized": "NEXT_MINIFY_FONTS=1 bunx --bun next build",
    "analyze": "ANALYZE=true bunx --bun next build",
    "optimize": "node scripts/optimize-build.js",
    "optimize:images": "node scripts/optimize-images.js",
    "update:project-images": "node scripts/update-project-images.js",
    "analyze:critical-path": "node scripts/analyze-critical-path.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
