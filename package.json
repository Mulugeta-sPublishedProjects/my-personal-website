    "lucide-react": "0.545.0",
    "next": "15.5.4",
    "next-themes": "0.4.6",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "6.0.0",
    "sharp": "0.34.4",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1",
